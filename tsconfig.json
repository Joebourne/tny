{
  "compilerOptions": {
    "noEmit": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./src/",
    "paths": {
      "@client/*": [
        "client/*"
      ],
      "@server/*": [
        "server/*"
      ],
      "@typing/*": [
        "typing/*"
      ]
    }
  }
}
